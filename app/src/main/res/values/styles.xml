<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BrightnessSeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">@color/white</item>
        <item name="android:progressTint">@color/blue</item>
        <item name="android:thumbTint">@color/blue</item>
    </style>

    <style name="EditTextBottom" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorControlNormal">@color/blue</item>
        <item name="colorControlActivated">@color/blue</item>
        <item name="colorControlHighlight">@color/blue</item>
    </style>

    <style name="Button" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="backgroundTint">@color/cardItem</item>
        <item name="cornerRadius">5dp</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHintInverse">@color/white</item>
        <item name="android:textColorHighlight">@color/cardItemSelected</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>